<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:scrollbars="vertical"
    android:scrollbarStyle="outsideOverlay"
    android:layout_marginBottom="15dp"
    app:cardCornerRadius="3dp"
    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:clickable="false"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/origen"
            android:layout_alignParentTop="true"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="Origen"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hora_salida"
            android:textColor="@color/abc_secondary_text_material_light"
            android:layout_gravity="left|bottom"
            android:text="hora"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/cupos" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/destino"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="Destino"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textColor="@color/abc_secondary_text_material_light"
            android:layout_gravity="left|bottom"
            android:text=" hacia "
            android:textSize="20dp"
            android:layout_alignTop="@+id/origen"
            android:layout_toRightOf="@+id/origen"
            android:layout_toLeftOf="@+id/destino"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vehicle"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/car"
            android:tint="#000000"
            android:layout_alignParentBottom="false"
            android:baselineAlignBottom="false"
            android:adjustViewBounds="false"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-12dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:scaleType="fitEnd"
            android:layout_toRightOf="@+id/destino" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cupos"
            android:textColor="@color/abc_secondary_text_material_light"
            android:layout_gravity="left|bottom"
            android:text="cupos"
            android:textSize="17dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="true"
            android:textAlignment="viewEnd"
            android:layout_alignParentRight="false"
            android:layout_alignParentStart="false"
            android:layout_alignRight="@+id/vehicle"
            android:layout_below="@+id/vehicle"
            android:layout_toRightOf="@+id/destino" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
