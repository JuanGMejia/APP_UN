<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    tools:context="com.example.juangui.un_app.ServiceDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:id="@+id/scrollView2"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_card"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="0dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Hora"
                    android:id="@+id/tvhora_salida"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:weightSum="1"
                android:layout_marginTop="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:padding="10dp"
                    android:weightSum="0.5"
                    android:background="@drawable/border_left_trip"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Origen"
                        android:id="@+id/textView1"
                        android:textStyle="bold"
                        android:layout_alignEnd="@+id/relativeLayout"
                        android:layout_alignParentStart="true"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="origen"
                        android:id="@+id/tvOrigen"
                        android:layout_below="@+id/textView1"
                        android:layout_alignRight="@+id/textView2"
                        android:layout_alignEnd="@+id/textView2"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="parqueadero"
                        android:id="@+id/tvlugar_salida"
                        android:layout_below="@+id/textView1"
                        android:layout_alignRight="@+id/textView2"
                        android:layout_alignEnd="@+id/textView2"
                        android:layout_alignParentStart="true"
                        android:textAlignment="center" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:padding="10dp"
                    android:weightSum="0.5"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border_right_trip"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Destino"
                        android:id="@+id/textView3"
                        android:textStyle="bold"
                        android:layout_alignEnd="@+id/relativeLayout"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="destino"
                        android:id="@+id/tvDestino"
                        android:layout_below="@+id/textView3"
                        android:layout_alignEnd="@+id/textView2"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="parqueadero"
                        android:id="@+id/tvlugar_llegada"
                        android:layout_below="@+id/textView3"
                        android:layout_alignEnd="@+id/textView2"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1"
                        android:layout_marginBottom="50dp"
                        android:layout_marginTop="4dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/border_left_down"
                            android:padding="15dp"
                            android:layout_weight="0.5"
                            android:layout_marginLeft="15dp"
                            android:weightSum="6"
                            android:layout_marginRight="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="VehÃ­culo"
                                android:id="@+id/tvvehiculo"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:textColor="#000000" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="15dp"
                                android:layout_marginTop="15dp">

                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="50dp"
                                    android:id="@+id/ivvehiculo"
                                    android:src="@mipmap/car"
                                    android:tint="#000000"
                                    android:cropToPadding="false"
                                    android:layout_weight="2"
                                    android:layout_gravity="center_horizontal" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="placa"
                                    android:id="@+id/tvplaca"
                                    android:textAlignment="center"
                                    android:background="@drawable/background_placa"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:padding="5dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_horizontal" />

                            </LinearLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:layout_margin="5dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Cupos libres:"
                                android:id="@+id/tvguia_cupos"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Cupos: "
                                android:id="@+id/tvcupos"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/border_right_down"
                            android:padding="15dp"
                            android:weightSum="5"
                            android:layout_marginLeft="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Conductor"
                                android:id="@+id/textView4"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#000000" />

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:id="@+id/imageView5"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="2"
                                android:src="@drawable/person"
                                android:layout_marginTop="15dp" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:layout_margin="5dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="conductor"
                                android:id="@+id/tvconductor"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:layout_gravity="center_horizontal" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="middle"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/scrollView2"
        android:layout_alignStart="@+id/scrollView2"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp"
        android:id="@+id/footer">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomar servicio"
            android:id="@+id/take"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="5dp"
            android:drawableRight="@android:drawable/ic_input_add"
            android:drawableTint="@android:color/holo_green_dark" />

    </LinearLayout>

</RelativeLayout>
