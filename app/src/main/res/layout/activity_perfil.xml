<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.juangui.un_app.Perfil">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/nameProfile"
        android:textIsSelectable="false"
        android:textSize="51dp"
        android:textStyle="bold|italic"
        android:hint="juan"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar Foto"
        android:id="@+id/picture"
        android:layout_below="@+id/nameProfile"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setpicture"
        android:src="@drawable/perfil"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/picture"
        android:layout_toStartOf="@+id/picture" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi Servicio"
        android:id="@+id/services"
        android:layout_below="@+id/picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalles de servicio:"
        android:id="@+id/textViewDetalle"
        android:textColor="#070000"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lugar de salida: Parqueadero bloque 12"
        android:id="@+id/textViewInicio"
        android:textSize="15dp"
        android:textColor="#070000"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/textViewDetalle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lugar de llegada: Parquedar bloque M7"
        android:id="@+id/textViewLlegada"
        android:textColor="#070000"
        android:textSize="15dp"
        android:layout_below="@+id/textViewInicio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cupos: 4"
        android:id="@+id/textViewCupos"
        android:textColor="#070000"
        android:textSize="15dp"
        android:layout_below="@+id/textViewClientes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clientes: cliente1, cliente2, cliente3, cliente4 "
        android:id="@+id/textViewClientes"
        android:textColor="#070000"
        android:textSize="15dp"
        android:layout_below="@+id/textViewHora"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora: 10:30. am"
        android:id="@+id/textViewHora"
        android:textColor="#070000"
        android:textSize="15dp"
        android:layout_below="@+id/textViewLlegada"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
