<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.juangui.un_app.Perfil">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/nameProfile"
        android:textIsSelectable="false"
        android:textSize="51dp"
        android:textStyle="bold|italic"
        android:password="false"
        android:hint="juan"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select photo"
        android:id="@+id/picture"
        android:layout_below="@+id/nameProfile"
        android:layout_alignRight="@+id/nameProfile"
        android:layout_alignEnd="@+id/nameProfile" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setpicture"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Location"
        android:id="@+id/maps"
        android:layout_below="@+id/picture"
        android:layout_alignLeft="@+id/picture"
        android:layout_alignStart="@+id/picture" />

</RelativeLayout>
