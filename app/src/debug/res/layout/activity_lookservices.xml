<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.juangui.un_app.lookservices">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedir Cupo"
        android:id="@+id/buttonGo"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="87dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:id="@+id/buttonCancel"
        android:layout_alignTop="@+id/buttonGo"
        android:layout_toRightOf="@+id/buttonGo"
        android:layout_toEndOf="@+id/buttonGo"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:textStyle="bold" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerDates"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Start: Parqueadero Bloque 12"
        android:id="@+id/DetailsStart"
        android:layout_below="@+id/spinnerDates"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:textColor="#1157fb"
        android:clickable="true"
        android:textColorLink="#2586ee"
        android:textIsSelectable="false"
        android:singleLine="false"
        android:linksClickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish: Parqueadero M7"
        android:id="@+id/DetailsFinish"
        android:layout_below="@+id/DetailsStart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textColor="#1157fb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quotas: 4"
        android:id="@+id/DetailsQuotas"
        android:layout_below="@+id/DetailsFinish"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#050000"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="License: MEI18D"
        android:id="@+id/DetailsLicense"
        android:layout_below="@+id/DetailsQuotas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textColor="#050000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalles:"
        android:id="@+id/Details"
        android:layout_below="@+id/spinnerDates"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#050000"
        android:textSize="25dp" />

</RelativeLayout>
